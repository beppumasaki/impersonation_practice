<div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
        <%= form_with model: comment, url: result_comments_path(result), id: 'new_comment' do |f| %>
            <%= f.label "コメント" %>
            <%= f.text_area :body, class: 'form-control mb-3', rows: 2 %>
            <%= f.hidden_field :result_id, :value => result.id %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.submit 'コメントする', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>