<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>追加したいお題</h1>
      <%= form_with model: @vote, local: true do |f| %>
      <div class="form-group">
          <%= f.label :name, User.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "選挙に出馬", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>