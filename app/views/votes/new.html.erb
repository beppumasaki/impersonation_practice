<% set_meta_tags title: t('.title') %>
<div class="container text-muted mt-5">
  <div class="row">
    <div class= "col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class= "mb-5"><i class="fa-solid fa-hand mr-2"></i><%= t('.title') %></h1>
      <%= form_with model: @vote, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, Vote.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit t('.register'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>