<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>お題の編集</h1>
      <div class="text-right">
        <%= link_to t('defaults.back'), admin_target_path(@target), class: 'btn btn-secondary' %>
      </div>
      <%= form_with model: @target, url: admin_target_path(@target), local: true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label "タグ (,で区切ると複数タグ登録できます)" %>
          <%= text_field :tag, :name, value: @tag_list, class:"form-control"%>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
