<h1 class="text-center my-5">タグの作成</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <div class="card text-center">
      <div class="card-body">
        <%= form_with model: @tag, url: admin_tags_path, local: true, method: :post do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "text-info" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit '新規作成', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>