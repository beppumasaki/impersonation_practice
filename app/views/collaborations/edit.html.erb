<% set_meta_tags title: t('.title') %>
<div class="container text-muted mb-5">
<div class='top-wrapper'>
  <div class='top-inner-text text-center'>
  <h1 class="text-muted mt-5 mb-5"><i class="fa-solid fa-people-carry-box mr-2"></i><%= t('.title') %></h1>
    <div class='title'>
      <h3><%= @collaboration_user.name %>さんの<%= @target.name %>とのコラボ</h3>
    </div>
    <%=audio_tag("#{@collaboration.collaboration_voice.url}", controls: true) %>
  </div> 
    <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <%= form_with model: @collaboration, url: collaboration_path(@collaboration), local: true do |f| %>
            <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
            <%= f.label :body %>
            <%= f.text_field :body, class: 'form-control' %>
            </div>
            <div class="form-group">
            <%= f.label :state %>
            <%= f.select :state, Collaboration.states_i18n.invert, {}, class: 'form-control' %>
            </div>
            <%= f.submit "更新", class: 'btn btn-primary' %>
        <% end %>
        </div>
    </div>
  </div>
</div> 